<div class="container portfolio-container">
  <div class="row">
    <div class="col-md-7">
      <%= image_tag portfolio_img(@portfolio_item.main_image.url, 'main'), width: '100%' %>
    </div>

    <div class="col-md-5">
      <h1><%= @portfolio_item.title %></h1>

      <a href=<%= @portfolio_item.subtitle %> target="_blank"><%= @portfolio_item.subtitle %></a>

      <p><%= @portfolio_item.body %></p>

      <h2>Technologies Used:</h2>

      <% @portfolio_item.technologies.each do |t| %>
      <p><%= t.name %></p>
      <% end %>

      <% if logged_in?(:site_admin) %>
        <div>
          <%= link_to "Edit Item", edit_portfolio_path(@portfolio_item), class: 'btn btn-warning'%>
        </div>
        <br>
      <% end %>

      <%= link_to "View All Portfolio Items", portfolios_path, class: "btn btn-primary" %>
    </div>
  </div>
</div>
